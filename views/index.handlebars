<h1>Eat The Burger!</h1>

<h2>Burgers!</h2>

<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <li>
        {{name}}
        <button class="devour burger" data-id="{{this.id}}">Eat It!</button>
    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers</h2>

<ul>
    {{#each burgers}}
    {{#if devoured}}
    <li>
        {{name}}
    </li>
    {{/if}}
    {{/each}}
</ul>

<h2>Add a burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name: </label>
        <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger!</button>
</form>