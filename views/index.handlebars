<div class="jumbotron text-center justify-content-center">
    <div class="row text-center">
        <div class="col-md-12">
            <h1>Eat The Burger!</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <h2>unEaten Burgers!</h2>

            <ul class="list-group">
                {{#each burgers}}
                {{#unless devoured}}
                <li class="list-group-item">
                    {{burger_name}}
                    <button class="devourBurger" data-id="{{this.id}}">Eat It!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-6">
            <h2> Eaten Burgers</h2>

            <ul class="list-group">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item">
                    {{burger_name}}
                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <h2>Add a burger</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">Burger Name: </label>
            <input type="text" id="ca" name="name">
        </div>

        <button type="submit">Add Burger!</button>
    </form>
</div>